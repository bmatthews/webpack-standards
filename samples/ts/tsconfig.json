{
  "compilerOptions": {
    "module": "es2015",
    "target": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "preserve",
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "awesome-typescript-loader": {
    "useBabel": true,
    "useCache": true
  }
}
