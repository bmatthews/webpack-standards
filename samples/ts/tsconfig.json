{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
